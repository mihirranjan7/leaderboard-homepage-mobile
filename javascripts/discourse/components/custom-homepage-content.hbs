{{#if this.isHomepage}}
  {{#unless this.closed}}
    <div class="leaderboard-mobile-only leaderboard-card">
      <button class="leaderboard-close" {{on "click" this.closeLeaderboard}}>Ã—</button>

      <div class="leaderboard-title">
        <a href="/leaderboard" class="leaderboard-link-text">
          Check out the top contributors
        </a>
        <a href="/leaderboard" class="leaderboard-link-icon" title="View Full Leaderboard">
          <svg class="fa d-icon d-icon-chevron-right svg-icon" aria-hidden="true">
            <use href="#chevron-right"></use>
          </svg>
        </a>
      </div>

      <div class="leaderboard-scroll">
        <div class="leaderboard-row">
          {{#each this.topUsers as |user|}}
            <a href={{user.path}} title="{{user.username}}" class="leaderboard-avatar" draggable="false">
              {{avatar user imageSize="large"}}
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  {{/unless}}
{{/if}}
